check_odd_even(){
if [ $((number%2)) -eq 0 ]; then
echo "$number is even"
else
echo"$number is odd"
fi
}
echo "please enter a number:"
read number
check_odd_even "$number"

echo "enter three numbers"
read num1
read num2
read num3
if [ $num1 -gt $num2 -a $num1 -gt $num3 ]
then
echo "$num1 is greater"
elif [ $num2 -gt $num3 ]
then
echo "$num2 is greater"
else
echo "$num3 is greater"
fi
